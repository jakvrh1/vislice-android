<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@color/combo2_2">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/dialog_konec"
        android:text="Konec igre!"
        android:textSize="60dp"
        android:textColor="@color/combo1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/dialog_highest_score"
        android:textSize="45dp"
        android:text="NajboljÅ¡i rezultat: 10"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:textColor="@color/softblue1"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/dialog_current_score"
        android:textSize="45dp"
        android:text="Trenutni rezultat: 10"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:fontFamily="casual"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/softblue1" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <Button
        android:id="@+id/dialog_try_again"
        android:text="Poskusite znova"
        android:textColor="@color/softblue1"
        android:background="@color/combo2_3"
        android:layout_width="wrap_content"
        android:textSize="35dp"
        android:padding="20dp"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="20dp" />


</LinearLayout>